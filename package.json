{
  "name": "hook-shell-script-webpack-plugin",
  "version": "0.3.0",
  "description": "A Webpack plugin for running shell scripts on any hook provided by Webpack.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/drewloomer/hook-shell-script-webpack-plugin"
  },
  "scripts": {
    "start": "ava --watch",
    "test": "nyc ava && eslint ."
  },
  "keywords": [
    "webpack",
    "bash",
    "shell",
    "hook"
  ],
  "author": "Drew Loomer",
  "license": "MIT",
  "devDependencies": {
    "ava": "^5.2.0",
    "eslint": "^6.5.1",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.9",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "proxyquire": "^2.1.3",
    "sinon": "^7.5.0",
    "webpack": "^4.41.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "ava": {
    "files": [
      "test/index.js",
      "e2e/index.js"
    ],
    "verbose": true
  },
  "nyc": {
    "reporter": "lcov"
  }
}
